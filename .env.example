# Hugging Face AI (Primary chatbot for students)
HUGGINGFACE_API_KEY=your-hugging-api-key-here

# Google Gemini AI (Fallback chatbot)
GEMINI_API_KEY=your-gemini-api-key-here

# Blackbox AI (Admin Chatbot - Optional)
# Use Blackbox AI for admin chatbot for better code assistance
BLACKBOX_API_KEY=your-blackbox-api-key-here

# Groq API (Marketing Website Chatbot)
# Ultra-fast AI inference for marketing chatbot
# Sign up at https://console.groq.com to get your API key
GROQ_API_KEY=your-groq-api-key-here

# Auto-Cleanup Configuration
# Automatically delete games older than specified days
AUTO_DELETE_DAYS=20
CLEANUP_ENABLED=true

# Razorpay Payment Gateway
# Sign up at https://razorpay.com and get your API keys from the dashboard
# Use test keys for development, live keys for production
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
