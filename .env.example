# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mindwave?retryWrites=true&w=majority

# Server Configuration
PORT=8081
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Client Configuration
CLIENT_ORIGIN=https://your-app-name.onrender.com

# Email Configuration (Optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=no-reply@mindwave.app

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://mindwave1onrender.com/auth/google/callback

